{
  "name": "@szum-tech/design-system",
  "version": "1.13.1",
  "description": "Szum-Tech design system with tailwindcss support",
  "keywords": [
    "szum-tech",
    "Szum-Tech",
    "tailwindcss",
    "react",
    "javascript",
    "theme",
    "typescript",
    "react-components",
    "storybook",
    "design-system",
    "semantic-release"
  ],
  "homepage": "https://github.com/JanSzewczyk/design-system#readme",
  "bugs": {
    "url": "https://github.com/JanSzewczyk/design-system/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JanSzewczyk/design-system.git"
  },
  "license": "MIT",
  "author": "Jan Szewczyk (Szum-Tech)",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "icons/**",
    "theme/**"
  ],
  "scripts": {
    "build": "env NODE_ENV=production tsup && cpy './src/theme/global.css' './theme' --flat",
    "clean": "rm -rf node_modules && yarn clear:build && yarn clean:build:dev",
    "clean:build": "rm -rf components && rm -rf contexts && rm -rf hooks && rm -rf icons && rm -rf theme && rm -rf index.* && rm -rf chunk-*.js && rm -rf chunk-*.mjs && rm -rf *.d.ts",
    "clean:build:dev": "rm -rf dist",
    "dev": "concurrently \"yarn dev:css\" \"yarn dev:build\"",
    "dev:build": "tsup",
    "dev:css": "tailwindcss -w -i src/theme/global.css -o src/styles/default.css",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "semantic-release": "semantic-release",
    "storybook:build": "storybook build --docs",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:serve": "serve storybook-static",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@tabler/icons-react": "^2.20.0",
    "@tailwindcss/container-queries": "^0.1.0",
    "class-variance-authority": "^0.6.0",
    "tailwind-scrollbar": "^3.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@storybook/addon-a11y": "^7.0.18",
    "@storybook/addon-essentials": "^7.0.18",
    "@storybook/addon-interactions": "^7.0.18",
    "@storybook/addon-styling": "^1.0.8",
    "@storybook/react": "^7.0.18",
    "@storybook/react-vite": "^7.0.18",
    "@szum-tech/prettier-config": "^1.2.1",
    "@szum-tech/semantic-release-preset": "^1.5.1",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "@types/semantic-release": "^20.0.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-c8": "^0.31.1",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.0.1",
    "cpy-cli": "^4.2.0",
    "happy-dom": "^9.20.3",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "react": "^18.2.0",
    "react-docgen": "^5.4.3",
    "react-docgen-typescript": "^2.2.2",
    "react-dom": "^18.2.0",
    "semantic-release": "^21.0.2",
    "serve": "^14.2.0",
    "storybook": "^7.0.18",
    "storybook-addon-pseudo-states": "^2.0.1",
    "storybook-dark-mode": "^3.0.0",
    "tailwindcss": "^3.3.2",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
