{
  "name": "@szum-tech/design-system",
  "version": "1.18.3",
  "description": "Szum-Tech design system with tailwindcss support",
  "keywords": [
    "szum-tech",
    "Szum-Tech",
    "tailwindcss",
    "react",
    "javascript",
    "theme",
    "typescript",
    "react-components",
    "storybook",
    "design-system",
    "semantic-release"
  ],
  "homepage": "https://github.com/JanSzewczyk/design-system#readme",
  "bugs": {
    "url": "https://github.com/JanSzewczyk/design-system/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JanSzewczyk/design-system.git"
  },
  "license": "MIT",
  "author": "Jan Szewczyk (Szum-Tech)",
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "icons/**",
    "theme/**"
  ],
  "scripts": {
    "build": "env NODE_ENV=production tsup && cpy './src/theme/global.css' './theme' --flat",
    "clean": "rm -rf node_modules && yarn clear:build && yarn clean:build:dev",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "storybook:build": "storybook build --docs",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:serve": "serve storybook-static",
    "test": "vitest",
    "test:ci": "CI=true vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tailwindcss/container-queries": "^0.1.0",
    "class-variance-authority": "^0.7.0",
    "tailwind-merge": "^2.3.0",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@storybook/addon-a11y": "^8.5.1",
    "@storybook/addon-essentials": "^8.5.1",
    "@storybook/addon-interactions": "^8.5.1",
    "@storybook/react": "^8.5.1",
    "@storybook/react-vite": "^8.5.1",
    "@storybook/theming": "^8.5.1",
    "@szum-tech/prettier-config": "^1.5.0",
    "@szum-tech/semantic-release-config": "^2.2.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@vitest/coverage-v8": "^3.0.4",
    "@vitest/ui": "^3.0.4",
    "autoprefixer": "^10.4.20",
    "cpy-cli": "^5.0.0",
    "happy-dom": "^16.7.2",
    "postcss": "^8.4.32",
    "prettier": "^3.4.2",
    "react": "^18.3.1",
    "react-docgen": "^7.1.0",
    "react-docgen-typescript": "^2.2.2",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "semantic-release": "^24.2.1",
    "serve": "^14.2.4",
    "storybook": "^8.5.1",
    "storybook-dark-mode": "^4.0.2",
    "tailwindcss": "^3.4.3",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.4",
    "zod": "^3.24.1"
  },
